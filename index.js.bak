const INITIAL_STATE = {
  timerLabel: "Session/Break",
  breakLength: "05:00",
  sessionLength: "25:00",
  timerLeft: "60:00"

};

/*---------- REACT  ----------*/
class ManoApp extends React.Component {
  constructor(props) {
    super(props);   
  };
  render() {
    return (
      <App25_5_Clock />
    );
  };
};
/*---------- TIMER MAIN COMPONENT  ----------*/
class App25_5_Clock extends React.Component {
  constructor(props) {
    super(props);
    this.state = INITIAL_STATE;
  };



  render() {
    return (
    <div id="mainClockFrame">
      <div>
        <h1 id="timer-label">{this.state.timerLabel}</h1>
        <h1 id="time-left">{this.state.timerLeft}</h1>
        <Button id="start_stop" name="Start/Stop"/>
        <Button id="reset" name="Reset"/>
      </div>
      <h2 id="break-label">Break Length</h2>
      <div>
        <h2 id="break-length">{this.state.breakLength}</h2>
        <Button id="break-decrement" name="-"/>
        <Button id="break-increment" name="+"/>
      </div>
      <h2 id="session-label">Session Length</h2>
      <div>
        <h2 id="session-length">{this.state.sessionLength}</h2>
        <Button id="session-decrement" name="-"/>
        <Button id="session-increment" name="+"/>
      </div>
    </div>
    )
  };
};
/*---------- BUTTON COMPONENT  ----------*/
class Button extends React.Component {
  constructor(props) {
    super(props);
  };
  render() {
    const styling = {
      gridArea: this.props.id,
      minWidth: "4ch",
      minHeight: "4ch"
    };
    return(
      <button id={this.props.id} onClick={() => {console.log(this.props.id)}} style={styling}>{this.props.name}</button>
    );
  };
};
/*---------------------------------*/
ReactDOM.render(
    <ManoApp />
  , document.getElementById('root'));
  
